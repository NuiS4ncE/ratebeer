<% content_for :title, "Beers" %>

<h1>Beers</h1>
<div id="beers">
  <% @beers.each do |beer| %>
    <strong>Name:</strong>
    <%= link_to beer.name, beer %>
    <br>
    <br>
    <strong>Style:</strong>
    <%= beer.style %>
    <br>
    <br>
    <strong>Brewery:</strong>
    <%= link_to beer.brewery.name, beer.brewery %>
    <br>
    <br>
  <% end %>
</div>
<p> <%= link_to "List of breweries", breweries_path %></p>

